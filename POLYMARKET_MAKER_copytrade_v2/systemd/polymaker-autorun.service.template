[Unit]
Description=Polymarket Maker Autorun Service
After=network.target

[Service]
Type=simple
User=__RUN_USER__
WorkingDirectory=__APP_ROOT__/POLYMARKET_MAKER_copytrade_v2/POLYMARKET_MAKER_AUTO
Environment="PATH=__PYTHON_BIN_DIR__:/usr/local/bin:/usr/bin:/bin"
ExecStart=__PYTHON_BIN__ poly_maker_autorun.py --no-repl
Restart=always
RestartSec=10
StandardOutput=append:__APP_ROOT__/POLYMARKET_MAKER_copytrade_v2/POLYMARKET_MAKER_AUTO/autorun_systemd.log
StandardError=append:__APP_ROOT__/POLYMARKET_MAKER_copytrade_v2/POLYMARKET_MAKER_AUTO/autorun_systemd.log

[Install]
WantedBy=multi-user.target
